{
  "name": "nodejs-typescript-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "tsx watch ./src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json && yarn copy-assets",
    "copy-assets": "copyfiles -u 1 \"src/**/*\" dist/ --exclude=src/**/*.ts --exclude=src/**/*.js",
    "playground": "tsx ./src/playground",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
    "prettier": "prettier \"{src,test}/**/*.{js,ts}\" --write"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@graphql-tools/load-files": "^7.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "formidable": "^3.5.2",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-tools": "^9.0.16",
    "knex": "^3.1.0",
    "moment-timezone": "^0.5.46",
    "objection": "^3.1.5",
    "pg": "^8.13.1",
    "typescript-eslint": "^8.26.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
